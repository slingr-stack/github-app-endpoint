{
  "label": "API call to githubApp",
  "name": "createIssueGithubApp",
  "category": "integrations",
  "description": "This flow step will send a request to githubApp to create a issue in the repo selected.",
  "inputs": [
    {
      "label": "Owner",
      "name": "owner",
      "type": "text",
      "description": "Owner or creator of the repository, can be the name of the organization that owns it.",
      "required": "true",
      "options": {
        "allowContextSelector": "true"
      }
    },
    {
      "label": "Repository",
      "name": "repository",
      "type": "text",
      "required": "true",
      "options": {
        "allowContextSelector": "true"
      }
    },
    {
      "label": "Title of the issue",
      "name": "title",
      "type": "text",
      "required": "true"
    },
    {
      "label": "Body of the issue",
      "name": "body",
      "type": "text",
      "description": "The contents of the issue.",
      "required": "true",
      "options": {
        "representation": "textArea"
      }
    }
  ],
  "outputs": [
    {
      "label": "Response",
      "name": "response",
      "type": "object",
      "description": "The response to external URL"
    }
  ]
}